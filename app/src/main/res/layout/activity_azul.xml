<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.dm.dmass.azul"
    android:background="@android:color/white">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:text="Programa Técnico Cinturón Azul (5° Kiu)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginTop="25dp" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="453dp"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Defensas Personales:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="1.- Manos de Limosnero ( Begging Hands ) Tomada frontal de muñecas, con dos manos."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="2.- Clavando Cuñas ( Thrusting Wedge ) Empujón frontal alto o intento de estrangulamiento con dos manos."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="3.- Alas Centellantes ( Flashing Wings ) Puño frontal derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="4.- Estrechando el Péndulo ( Hugging Pendulum ) Patada lateral derecha."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul4" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="5.- Repetición Devastadora ( Repeated Devastation ) Full Nelson."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="6.- Ala Enredada ( Entangled Wing ) Llave frontal de brazo."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul6" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="7.- Desafiando la Tormenta ( Defying the Storm ) Bastón Circular derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul7" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="8.- Masa Raspadora ( Racking Mace ) Doble tomada de solapa."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul8" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="9.- Talón Golpeador ( Snacking Talon ) Empujón frontal con dos manos."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul9" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="10.- Escudo y Masa ( Shield and Mace ) Puño frontal derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul10" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="11.- Retirando el Péndulo ( Retreating Pendulum ) Patada frontal derecha."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul11" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="12.- Atrapando la flecha ( Tripping Arrow ) Abrazo de Oso frontal con manos libres."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul12" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="13.- Cruce arruinador ( Fallen Cross ) Estrangulamiento posterior con dos manos."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul13" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="14.- Retornando la Tormenta ( Returning the Storm ) Bastón circular y de revés derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul14" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="15.- Ramas cruzadas ( Crossed twigs ) Tomada de muñeca posterior a las dos manos."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul15" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Posiciones: \n \n 1.- Diamante. \n 2.- Convexa."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul16" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Técnicas de Mano: \n \n 1.- Talón descendente. \n 2.- Martillo atrás y descendente."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul17" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Técnicas de Pié: \n \n 1.- Patada de cuchara. \n 2.- Hacia atrás normal y de 1/2 vuelta ( Back Kick ). \n 3.- Patada de Conejo."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul18" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Bloquéos: \n \n 1.- Interno bajo con Antebrazo. \n 2.- Interno bajo con Martillo."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul19" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Set y formas: \n \n 1.- Stance set N° 1. \n 2.- Blocking set N° 2. \n 3.- Forma Larga N° 2."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul20" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Tiempo del grado, 8 meses aproximadamente."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txAzul21"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/azul"
                android:id="@+id/imageView31" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
