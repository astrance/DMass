<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.dm.dmass.cafe1"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:theme="@style/AppTheme.AppBarOverlay">

            <TextView
                android:text="Programa Técnico Cinturón Café 1° Kiu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginBottom="@dimen/text_margin"
                android:layout_marginTop="25dp"  />
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="453dp"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Defensas Personales ( con Extensiones ):"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="1.- Agarrando Plumas ( Clutching Feathers ) Tomada frontal de pelo, con mano izquierda."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.1" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="2.- Saludo Gatillado ( Triggered Salute ) Empujón frontal derecho, con mano derecha."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.2" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="3.- Danza de la Muerte ( Dance of Death ) Puño frontal Derecho con paso en Profundidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.3" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="4.- Saludo Empujador ( Thrusting Salute ) Puntapié frontal derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.4" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="5.- Regalo de Destrucción ( Gift of Destruction ) Apretón de mano derecha."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.5" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="6.- Cuernos Enganchados ( Locking Horns ) Candado frontal al cuello."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.6" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="7.- Kimono Solitario ( Lone Kimono ) Tomada frontal de solapa, con mano izquierda."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.7" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="8.- Desviando el Saludo ( Glancing Salute ) Empujón frontal cruzado, con mano derecha."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.8" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="9.- Cinco Espadas ( Five Swords ) Puño frontal derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.9" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="10.- Espada y Martillo ( Sword and Hammer ) Tomada de hombro con mano izquierda por costado derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.10" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="11.- Raspando el Casco ( Scraping Hoof ) Full Nelson."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.11" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="12.- Tomada de Muerte ( Grip Of Death ) Candado al Cuello, por el costado izquierdo con brazo derecho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.12" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="13.- Talón Cruzado ( Crossing Talon ) Tomada frontal de muñeca derecha, cruzada."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.13" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="14.- Masa de Repetición ( Repeating Mace ) Empujón frontal, con mano izquierda."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.14" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="15.- Martillo Escudado ( shielding Hammer ) Puño frontal Izquierdo en gancho."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.15" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Set y Formas: \n \n 1.- Striking Set N° 1."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txCafe1.16" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Tiempo del grado, 12 meses aproximadamente."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:id="@+id/txCafe1.17" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cafe3"
                android:id="@+id/imageView35" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
