<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.dm.dmass.intro"
    android:background="@android:color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginTop="12dp"
            android:text="Introducción"
            android:textAlignment="center"
            android:textSize="30sp" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/av_bottom_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:visibility="visible"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_inferior_ad_unit_id" />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="453dp"
        android:layout_marginTop="115dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" >

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Que la fuerza del tigre y el espíritu del dragón te guíen por el camino del Kenpo... \n ...y de tu vida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView19"
                android:textStyle="normal|bold"
                android:textAlignment="center"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En estos tiempos modernos, tal como el Kenpo se adapta, nosotros como escuela, nos adaptamos, al cambio, al avance, a lo nuevo, manteniendo la esencia. \n Dojo Mass Chile, en un esfuerzo por mantenerse actualizado en lo que a tendencias se refiere, presenta a Usted, esta aplicación que contiene el Programa Técnico completo de entrenamiento de nuestra Escuela. Esta herramienta viene a ser una alternativa al programa técnico en papel y permitirá tener a la mano, todo el material de trabajo que nuestra institución maneja. \n \n Esperamos que hagas un uso adecuado de esta información. \n \n Atte. René Huaiquimil"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text="Filiales reconocidas Dojo Mass Chile 2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/filial"
                android:id="@+id/imageView21" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:srcCompat="@drawable/rene6"
                android:id="@+id/imageView20" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <TextView
                android:text=" Un verdadero Artista marcial no es alguien que teme al cambio, sino alguien que lo provoca!. ( Ed Parker )"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView29" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>


    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
